<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NeatTricks" parent="AppTheme" >
        <item name="android:colorBackground">@color/neatTricks_background_material_light</item>
        <item name="android:textColorPrimary">@color/neatTricks_primary_text</item>
        <item name="colorPrimary">@color/neatTricks_colorPrimary</item>
        <item name="android:textColorSecondary">@color/neatTricks_secondary_text</item>
        <item name="colorAccent">@color/neatTricks_colorAccent</item>
        <item name="colorPrimaryDark">@color/neatTricks_colorPrimaryDark</item>
    </style>

</resources>
